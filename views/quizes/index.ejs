<table>
  <% var i; for (i=0; i < quizes.length; i++) { %>        
    <tr>
      <!-- Añadido para la realización del ejercicio P2P del módulo 8. Muestra el índice temático de cada pregunta-->
      <td><%= quizes[i].indiceTema %>:</td>

      <td>&nbsp<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
       <%if(session.user){%>
        <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
        <td>
          <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
            <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %> (<%= quizes[i].indiceTema %>)');">
              borrar
            </button>
          </form>
        </td>
      <%}%>
    </tr> 
  <% } %>
</table>
<p/>
<%if(session.user){%>
  <a href="/quizes/new"><button>Crear pregunta</button></a>
<%}%>
